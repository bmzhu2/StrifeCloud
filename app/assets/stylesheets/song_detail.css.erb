.no-song {
  font-size: 30pt;
  padding-top: 25%;
  text-align: center;
}

/* SONG BANNER */

.song-banner {
  width: 100%;
  height: 380px;
  background-image: linear-gradient(to bottom right, rgb(249, 249, 249), rgb(124, 124, 124));

  display: flex;
  justify-content: space-between;
}

.song-banner > .song-banner-main {
  display: flex;
  justify-content: flex-start;
}

.song-banner .song-banner-play {
  position: relative;
  height: 57px;
  width: 57px;
  background: white;
  border: none;
  border-radius: 50%;
  margin: 31px 5px 0 31px
}

.song-banner .song-banner-play i {
  position: absolute;
  left: -2px;
  top: 0;
  font-size: 47pt;
  color: #ff5700;
}

.song-banner .song-banner-play i:hover {
  color: #e04b00;
}

.song-banner > .song-banner-main > .song-banner-info {
  margin: 28px 0 0 7px;
  display: flex;
  flex-direction: column;
}

.song-banner .song-banner-uploader, .song-banner .song-banner-title {
  background-color: rgb(20,20,20);
}

.song-banner .song-banner-uploader {
  position: absolute;
  margin-bottom: 4px;
  padding: 3px 7px 5px 7px;
  color: rgb(210,210,210);
  font-size: 12pt;
  text-decoration: none;
}

.song-banner .song-banner-uploader:hover {
  color: white;
}

.song-banner .song-banner-title {
  margin-top: 28px;
  padding: 7px 7px 6px 7px;
  color: white;
  font-size: 18pt;
}

.song-banner .banner-right-side {
  display:flex;
  justify-content: flex-end;
}

.song-banner .banner-upload-time-ago {
  color: white;
  font-size: 11pt;
  margin: 35px 10px 0 0;
}

.song-banner .song-picture-frame, .song-banner .song-picture, .song-banner .blank-image {
  width: 340px;
  height: 340px;
}

.song-banner .song-picture-frame {
  background: white;
  margin: 20px;
}

.song-banner  .blank-image {
  background: rgb(120, 122, 135);
}

/* BELOW BANNER */

.below-banner {
  width: 100%;
  padding: 21px 30px 20px 31px;
  display: flex;
}

.below-banner-left {
  width: 848px;
  border-right: 1px solid rgb(240, 240, 240);
}

.below-banner-right {
  position: relative;
}

.below-banner-right > .github-link {
  background-image:url(<%= image_path "github_logo_med.png" %>);
  width: 64px;
  height: 64px;
  position: absolute;
  bottom: 75px;
  left: 140px;
}

.below-banner-comment-count  {
  padding-right: 15px;
  font-size: 9pt;
  color: rgb(160,160,160);
  display: flex;
  align-items: center;
}

.below-banner-comment-count i {
  padding-right: 5px;
  font-size: 8pt;
  color: rgb(160,160,160);
}

/* COMMENT FORM */

.song-comment-form {
  height: 38px;
  width: 820px;
  
  display: flex;
}

.song-comment-form > .user-picture-thumbnail-frame {
  height: 40px;
  width: 40px;
}

.song-comment-form .user-picture-thumbnail {
  height: inherit;
  width: inherit;
}

.song-comment-form .blank-user-picture-thumbnail {
  height: inherit;
  width: inherit;
  background: rgb(120, 122, 135);
}

.song-comment-form > .comment-container {
  height: 38px;
  width: 775px;
  background: rgb(230, 230, 230);
  border: 1px solid rgb(220, 220, 220);
  display: flex;
  align-content: center;
  justify-content: center;
}

.song-comment-form > .comment-container > .comment-input {
  height: 70%;
  width: 100%;

  padding: 5px 0 5px 10px;
  margin: 5px;
  border: 1px solid rgb(220,220,220);
  border-radius: 4px;
  box-sizing: border-box;

  font-size: .9em;
}

.song-comment-form > .comment-container > .comment-input::placeholder {
  opacity: .8;
}

.song-comment-form > .comment-container > .comment-input:focus {
  border-color: rgb(150,150,150);
}

/* SONG EDIT CONTROLS */
.below-banner-stats {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgb(240, 240, 240);
  margin-right: 30px;
}

.below-banner-stats > .empty-song-edit-controls {
  height: 50px;
  width: 50px;
}

.song-edit-controls {
  padding: 12px 0 10px 0;
}

.song-edit-controls button {
  margin-right: 5px;
  border: 1px solid rgb(230, 230, 230);
  border-radius: 4px;
  padding: 5px 10px 5px 5px;
  font-size: 10pt;
}

.song-edit-controls button:hover {
  border: 1px solid rgb(200,200,200);
}

.song-edit-controls button > i {
  margin: 0 10px 0 5px;
  font-size: 9pt;
}


/* UPLOADER INFO */

.song-comments-section {
  padding-top: 20px;
  display: flex;
}

.uploader-info {
  transform: translate(-2px, -2px);
  padding-right: 25px;
  display: flex;
  flex-direction: column;
}

.uploader-info > .uploader-picture-frame {
  width: 120px;
  height: 120px;
  margin-bottom: 5px;
  background: rgb(120, 122, 135);
  border: 1px solid rgb(220, 220, 220);
  border-radius: 50%;
}

.uploader-info > .uploader-picture-frame:hover {
  cursor: pointer;
}

.uploader-info > .uploader-picture-frame > .uploader-profile-picture {
  width: inherit;
  height: inherit;
  border-radius: 50%;
}

.uploader-info > .uploader-picture-frame > .blank-uploader-profile-picture {
  width: inherit;
  height: inherit;
  border-radius: 50%;
  background: rgb(120, 122, 135);

}

.uploader-info > .uploader-username {
  display: inline;
  font-size: 11pt;
  color: rgb(60,60,60);
  text-decoration: none;
}

.uploader-info > .uploader-username:hover {
  color: black;
}

.song-uploader-song-count {
  padding-top: 10px;
  font-size: 9pt;
  color: rgb(160,160,160);
  text-decoration: none;
}
.song-uploader-song-count i {
  padding-right: 5px;
  font-size: 8pt;
  color: rgb(160,160,160);
  text-decoration: none;
}

.comments-column {
  width: 669px;
  display: flex;
  flex-direction: column;
}

.comments-column > .song-description {
  font-size: 11pt;
  padding-bottom: 10px;
}

.comments-column > .comment-count {
  font-size: 11pt;
  color: rgb(160,160,160);
  padding: 10px 0;
}

/* COMMENTS INDEX */

.comments-index {
  position: relative;
  width: 670px;
  padding-bottom: 30px;
  border-top: 1px solid rgb(240, 240, 240);
  border-bottom: 1px solid rgb(240, 240, 240);
}

.comments-index > .comments-index-inside {
  width: 680px;
  transform: translate(-10px, 0);
  display: flex;
  flex-direction: column;
}

.comments-index > .comments-section-logo {
  position: absolute;
  width: 30px;
  height: 30px;
  bottom: -15px;
  background: white;
}

.comments-index-item {
  padding: 10px;
  display: flex;
  justify-content: space-between;
}

.comments-index-item.highlighted {
  background: rgb(240, 240, 240);
}

.comment-left {
  display: flex;
}

.comment-left > .commenter-picture-frame {
  width: 38px;
  height: 38px;
  background: white;
  border: 1px solid rgb(220,220,220);
  border-radius: 50%;
}

.comment-left > .commenter-picture-frame:hover {
  cursor: pointer;
}

.comment-left > .commenter-picture-frame > .commenter-profile-picture {
  width: inherit;
  height: inherit;
  border-radius: 50%;
}

.comment-left > .commenter-picture-frame > .commenter-blank-profile-picture {
  width: inherit;
  height: inherit;
  background: rgb(120, 122, 135);
  border-radius: 50%;
}

.comment-left > .comment-main {
  padding: 5px 5px 0 10px;
}

.comment-left > .comment-main > .commenter-username {
  display: inherit;
  font-size: 9pt;
  color: rgb(160,160,160);
  text-decoration: none;
}

.comment-left > .comment-main > .comment-body {
  padding-top: 2px;
  font-size: 9pt;
}

.comment-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between
}

.comment-right > .comment-time-ago {
  padding-top: 3px;
  font-size: 9pt;
  color: rgb(160,160,160);
}

.comment-right > .comment-buttons-area {
  width: inherit;
  display: flex;
  justify-content: flex-end;
}

.delete-comment {
  visibility: hidden;
  width: 20px;
  height: 20px;
  border: 1px solid rgb(200,200,200);
  border-radius: 3px;
  display: flex;
  justify-content: center;
}

.comments-index-item:hover .delete-comment {
  visibility: visible;
}

.delete-comment:hover {
  border: 1px solid rgb(160,160,160);
}

.delete-comment > i {
  font-size: 9pt;
}

/* BLANK COMMENT INDEX */

.blank-comment-index {
  width: 670px;
  padding-top: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.blank-comment-index > i {
  font-size: 140pt;
  color: rgb(240, 240, 240);
}

.blank-comment-index > .blank-comment-index-p1 {
  padding: 25px 0 10px 0;
  font-size: 14pt;
}

.blank-comment-index > .blank-comment-index-p2 {
  font-size: 12pt;
  color: rgb(160,160,160);
}