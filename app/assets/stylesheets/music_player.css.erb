footer {
  position: sticky;
  bottom: 0;
  z-index: 2;
}

.music-player {
  height: 48px;
  background: rgb(240, 240, 240);

  border-top: 1px solid rgb(200, 200, 200);

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 8pt;
}

/* PLAY CONTROLS */

.music-player > .play-controls {
  font-size: 10pt;
  display: flex;
  align-items: center;
}

.music-player > .play-controls .icon{
  display: inline-block;
  background-color: transparent;
  background-size: 25px 25px;

  width: 25px;
  padding-top: 22px;
  height: 0px;
  border: none;
  margin: 0 8px 0 8px;
  overflow: hidden;
}

.prev {
  background-image: url(<%= image_path 'sprites/prev.png' %>)
}

.play {
  background-image: url(<%= image_path 'sprites/play.png' %>)
}

.pause {
  background-image: url(<%= image_path 'sprites/pause.png' %>)
}

.next {
  background-image: url(<%= image_path 'sprites/next.png' %>)
}

/* PLAY BAR */
.progress{
  width: 625px;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.progress > .elapsed-time, .progress > .remaining-time {
  position: absolute;
  padding: 20px;
}

.progress > .elapsed-time {
  left: 0;
  color: #ff5700;
}

.progress > .remaining-time {
  right: 0;
}

.progress > .play-bar {
  width: 80%;
  height: 25px;
  display: flex;
  align-items: center;
}

.progress > .play-bar:hover {
  cursor: pointer;
}

.progress > .play-bar > .full-line {
  width: 100%;
  height: .5px;
  border: 0.25px solid rgb(200, 200, 200);
}

.progress > .play-bar > .current-line {
  position: absolute;
  height: .5px;
  border: 0.25px solid #ff5700;
}

.progress > .play-bar > .circle {
  display: none;
  position: absolute;
  left: 58px;

  height: 8px;
  width: 8px;
  background-color: #ff5700;
  border-radius: 50%;
} 

.progress > .play-bar:hover .circle {
  display: inline;
}

/* VOLUME CONTROL */

.music-player > .volume-control {
  font-size: 10pt;
  display: flex;
  align-items: center;
}

.music-player > .volume-control .icon {
  display: inline-block;
  background-color: transparent;
  background-size: 25px 25px;

  width: 25px;
  padding-top: 22px;
  height: 0px;
  margin: 10px;
  border: none;
  overflow: hidden;
}

.unmuted {
  background-image: url(<%= image_path 'sprites/volume.png' %>);
}

.muted {
  background-image: url("sprites/mute.png");
}

/* SONG INFO */

.player-song-info {
  width: 300px;
  height: 80%;
  display: flex;
  align-items: center;
}

.player-song-info > .thumbnail {
  display: inline-block;
  position: relative;

  width: 30px;
  padding-top: 30px;
  height: 0;
  margin: 10px;

  overflow: hidden;
}

.player-song-info .song-thumbnail, .player-song-info .blank-thumbnail {
  width: 30px;
  height: 30px;
  border: .25px solid rgb(200, 200, 200);
  position: absolute;
  top: 0;
  left: 0;
}
 
.player-song-info .blank-thumbnail {
  background: rgb(120, 122, 135);
}

.player-song-info > .player-text-info {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.player-song-info > .player-text-info > .player-uploader-name {
  color: rgb(160, 160, 160);
  text-decoration: none;
}

.player-song-info > .player-text-info > .player-track-title {
  color: rgb(90, 90, 90);
  text-decoration: none;
}

.player-song-info > .player-text-info > .player-uploader-name:hover {
  color: black;
}

.player-song-info > .player-text-info > .player-track-title:hover {
  color: black;
}