footer {
  position: sticky;
  bottom: 0;
  z-index: 2;
}

.music-player {
  height: 48px;
  background: rgb(240, 240, 240);

  border-top: 1px solid rgb(200, 200, 200);

  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 8pt;
}

/* PLAY CONTROLS */

.music-player > .play-controls {
  font-size: 10pt;
  display: flex;
  align-items: center;
}

.music-player > .play-controls .icon{
  display: inline-block;
  background-color: transparent;
  background-size: 25px 25px;

  width: 25px;
  padding-top: 22px;
  height: 0px;
  border: none;
  margin: 0 8px 0 8px;
  overflow: hidden;
}

.prev {
  opacity: .2;
  background-image: url(<%= image_path 'sprites/prev.png' %>);
}

.play {
  background-image: url(<%= image_path 'sprites/play.png' %>);
}

.pause {
  background-image: url(<%= image_path 'sprites/pause.png' %>);
}

.next {
  opacity: .2;
  background-image: url(<%= image_path 'sprites/next.png' %>);
}

.prev:hover, .next:hover {
  cursor: default;
}

/* PLAY BAR */
.progress{
  width: 625px;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.progress > .elapsed-time, .progress > .remaining-time {
  position: absolute;
  padding: 20px;
}

.progress > .elapsed-time {
  left: 0;
  color: #ff5700;
}

.progress > .remaining-time {
  right: 0;
}

.progress > .play-bar {
  position: relative;
  width: 80%;
  height: 25px;
  display: flex;
  align-items: center;
}

.progress > .play-bar:hover {
  cursor: pointer;
}

.progress > .play-bar > .full-line {
  width: 100%;
  height: .5px;
  border: 0.25px solid rgb(200, 200, 200);
}

.progress > .play-bar > .current-line {
  position: absolute;
  height: .5px;
  border: 0.25px solid #ff5700;
}

.progress > .play-bar > .circle {
  display: none;
  position: absolute;

  height: 8px;
  width: 8px;
  background-color: #ff5700;
  border-radius: 50%;
} 

.progress > .play-bar:hover .circle, .progress > .play-bar .circle.show {
  display: inline;
}

.progress > .play-bar > .play-bar-seek {
  position: absolute;
  background: transparent;
  width: 100%;
  height: 100%;
}

/* VOLUME CONTROL */

.music-player > .volume-control {
  position: relative;
  font-size: 10pt;
  display: flex;
  align-items: center;
}

.music-player > .volume-control .icon {
  display: inline-block;
  background-color: transparent;
  background-size: 25px 25px;

  width: 25px;
  padding-top: 22px;
  height: 0px;
  margin: 10px;
  border: none;
  overflow: hidden;
}

.music-player > .volume-control > .volume-slider {
  visibility: hidden;
  width: 30px;
  height: 120px;
  position: absolute;
  z-index: 2;
  left: 5px;
  bottom: 39px;
  background: rgb(240, 240, 240);
  border: 1px solid rgb(200, 200, 200);

  display: flex;
  justify-content: center;
}

.music-player > .volume-control > .volume-slider::before, .music-player > .volume-control > .volume-slider::after{
  content: " ";
  position: absolute;
  top: 100%;
  left: 50%;
  border-style: solid;
}

.music-player > .volume-control > .volume-slider::before {
  margin-left: -7px;
  border-width: 7px;
  border-color: rgb(200, 200, 200) transparent transparent transparent;
}

.music-player > .volume-control > .volume-slider::after {
  margin-left: -6px;
  border-width: 6px;
  border-color: rgb(240, 240, 240) transparent transparent transparent;
}

.music-player > .volume-control > .volume-slider.show {
  visibility: visible;
}

.music-player > .volume-control:hover > .volume-slider {
  visibility: visible;
}

.volume-slider > .volume-full-bar {
  height: 100px;
  width: 0px;
  margin-top: 10px;
  border: 1px solid rgb(200, 200, 200);
}

.volume-slider > .volume-current-bar {
  position: absolute;
  width: 0px;
  border: 1px solid #ff5700;
}

.volume-slider > .volume-circle {
  position: absolute;

  height: 8px;
  width: 8px;
  background-color: #ff5700;
  border-radius: 50%;
}

.volume-slider > .volume-bar-seek {
  position: absolute;
  background: transparent;
  width: 100%;
  height: 100%;
}

.volume-slider > .volume-bar-seek:hover {
  cursor: pointer;
}

.high-volume {
  background-image: url(<%= image_path 'sprites/high-volume.png' %>);
}

.low-volume {
  background-image: url(<%= image_path 'sprites/low-volume.png' %>);
}

.muted {
  background-image: url(<%= image_path 'sprites/muted.png' %>);
}

/* SONG INFO */

.player-song-info {
  width: 300px;
  height: 80%;
  display: flex;
  align-items: center;
}

.player-song-info > .thumbnail {
  display: inline-block;
  position: relative;

  width: 30px;
  padding-top: 30px;
  height: 0;
  margin: 10px;
}

.player-song-info .song-thumbnail, .player-song-info .blank-thumbnail {
  width: 30px;
  height: 30px;
  border: .25px solid rgb(200, 200, 200);
  position: absolute;
  top: 0;
  left: 0;
}
 
.player-song-info .blank-thumbnail {
  background: rgb(120, 122, 135);
}

.player-song-info > .player-text-info {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.player-song-info > .player-text-info > .player-uploader-name {
  color: rgb(160, 160, 160);
  text-decoration: none;
}

.player-song-info > .player-text-info > .player-track-title {
  color: rgb(90, 90, 90);
  text-decoration: none;
  padding-bottom: 2px;
}

.player-song-info > .player-text-info > .player-uploader-name:hover {
  color: black;
}

.player-song-info > .player-text-info > .player-track-title:hover {
  color: black;
}