.discover {
  display: flex;
}

.category-index {
  width: 880px;
}

.category-index-item {
  width: 820px;
  margin: 0 30px 3px 30px;
  padding: 30px 0 40px 0;
  border-bottom: 1px solid rgb(240,240,240)
}

.category-name {
  padding: 3px 0;
  
  font-size: 17pt;
}

.category-description {
  padding: 9px 0 27px 0;

  font-size: 10pt;
  color: rgb(160,160,160)
}

.song-index {
  display: flex;
}

.song-index-item.discover {
  margin-right: 42px;
  display: flex;
  flex-direction: column;
}

.song-index-item > .song-item-image {
  width: 173px;
  height: 173px;
}

.song-index-item > .song-item-image > .song-picture {
  width: inherit;
  height: inherit;
  position: absolute;
}

.song-index-item > .blank-image {
  width: 173px;
  height: 173px;
  background: rgb(120, 122, 135);
}

.song-index-item > .song-item-image:hover, .song-index-item > .blank-image:hover {
  cursor: pointer;
}

.song-index-item  .play {
  display: none;
  position: relative;
  width: 55px;
  height: 55px;
  left: 60px;
  top: 60px;
  background: white;
  border: none;
  border-radius: 50%;
}

.song-index-item  .play > i{
  position: absolute;
  top: -3px;
  left: -4px;
  color: #ff5700;
  font-size: 46pt;
}

.song-index-item .play > i:hover {
  color: #e04b00;
}

.song-index-item > .song-item-image:hover .play, .song-index-item > .blank-image:hover .play, .play.nowPlaying{
  display:inline;
}

.song-index-item > .song-item-title {
  display: inline-block;
  padding: 9px 0 4px 0;

  font-size: 10pt;
  color: black;
  text-decoration: none;
}

.song-index-item > .song-item-uploader {
  font-size: 9pt;
  color: rgb(160,160,160);
  text-decoration: none;
}

/* SIDE PANEL */

.side-panel {
  position: relative;
}

.side-panel > .github-link {
  background-image:url(<%= image_path "github_logo_med.png" %>);
  width: 64px;
  height: 64px;
  position: absolute;
  bottom: 175px;
  left: 140px;
}

.side-panel > .side-panel-legalese {
  background-image: url(<%= image_path "legalese.png" %>);
  width: 320px;
  height: 60px;
  position: absolute;
  left: 25px;
  bottom: 100px;
}